<div id="chat-container" class="theme-green">
    <!-- Panel czatu -->
    <div id="chat-box" class="hidden">
        <div id="chat-header">
            <span>Chat Biblioteki</span>
            <button id="chat-close-btn" aria-label="Zamknij czat">✖</button>
        </div>
        <div id="chat-messages"></div>
        <form id="chat-form">
            <input type="text" id="chat-input" placeholder="Wpisz wiadomość..." autocomplete="off" />
            <button type="submit">➤</button>
        </form>
    </div>

    <!-- Ikona czatu -->
    <button id="chat-toggle-btn" aria-label="Otwórz czat">💬</button>
</div>

<link rel="stylesheet" href="chat.css" />
<script src="chat.js" defer></script>
